<% provide(:title, 'All companies') %>
<h1>All companies</h1>
<div class="add-new-item"><%= link_to 'Добавить больницу', new_company_path %></div>
<%= will_paginate %>
<ul>
  <% @companies.each do |company| %>
    <li><%= link_to company.name, company %>
     | <%= link_to 'Edit', edit_company_path(company) %>
   | <%= link_to 'Delete', company, method: :delete,
     data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
<%= will_paginate %>
